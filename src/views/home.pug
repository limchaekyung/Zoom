doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        style
            include style.css 
    body
        div.container
            header
                h1 Noom
            main
                div#welcome 
                    form#name
                        h4 nickname: Anon
                        input(placeholder="nickname", required, type="text")
                        button Save
                    form#enter
                        input(placeholder="room name", required, type="text")
                        button Enter room
                    h4 Open rooms: 
                    ul
                div#room
                    h3
                    a(href="javascript:history.go(0)") &lt;
                    br
                    div#myStream
                        video#myFace(autoplay, playsinline)
                        select#cameras
                        button#mute Mute
                        button#camera Turn Camera Off
                    div#peerStream
                        video#peerFace(autoplay, playsinline)
            div#mesg
                form#msg
                    input(placeholder="message", required, type="text")
                    button Send
                ul
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")
